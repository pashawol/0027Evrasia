mixin sAbout(data)
	// start sAbout
	+b.sAbout.section#sAbout&attributes(attributes)

	
		
		.container
			.row
				mixin item(i,t,p)
					+e.col.col-md-6&attributes(attributes)
						+e.item
							+e.img-wrap 
								+pic(`about-${i}.jpg`,'bg', 0)
							+e.caption
								+e.title!= t
								+e.text!= p
				+item(`1`,data.title1, data.text1)(class="wow  animate__fadeInLeft  " )
				+item(`2`,data.title2, data.text2)(class="wow  animate__fadeInRight  " )
			p(class="wow  animate__fadeInUp  " )!= data.text
			
				
	// end sAbout